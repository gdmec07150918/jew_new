image{width: 100%;height: 100%;}
image.logo{width: 76rpx;padding: 10rpx 20rpx;}
.head_seach{position: fixed; width: 100%; display: flex;display: -webkit-flex; z-index: 99;background-color: #000;}
.swiper{padding-top: 80rpx;}
/* .head_seach .oper{width: 30rpx;height: 88rpx;} */
.head_seach .form{flex: 1;background-color: #fff;position: relative;height: 60rpx;margin: 8rpx 0;border-radius: 60rpx;display: -webkit-box; display: -webkit-flex;display: -moz-box;display: -ms-flexbox;display: flex;-webkit-box-align: center;-webkit-align-items: center;-moz-box-align: center;-ms-flex-align: center;align-items: center;margin-right: 20rpx;}
.head_seach .form image{padding-left: 30rpx;width: 32rpx;height: 32rpx;}
.head_seach .form .input{
  flex: 1;
    outline: 0;
    border: 0;
    width: 100%;color: #999;
    /* color: #232326; */
    font-size: 28rpx;
    height: 40rpx;
    padding: 12rpx;}
image.swiper-item{width: 100%;height: 100%;}
/* 货品列表 */
.goods_list.cols_2{display: flex;display: -webkit-flex;flex-wrap: wrap;background-color: #f7f7f7;}
.goods_list.cols_2 .gs_item {position: relative;flex: 1;-webkit-box-flex: 1;flex-basis: 50%;max-width: 50%;margin-bottom: 5px;overflow: hidden;background-color: #f7f7f7;}
/* .goods_list.cols_2 .gs_item:nth-child(n){margin-right: 3px;}
.goods_list.cols_2 .gs_item:nth-child(2n){margin-left: 3px;margin-right: 0;} */
.goods_list.cols_2 .gs_item .info:nth-child(n){margin-right: 3px;background-color: #fff;}
.goods_list.cols_2 .gs_item .info:nth-child(2n){margin-right: 0;margin-left: 3px;}
.goods_list.cols_2 .img_cover{position: relative;height: 0;padding-top: 100%;overflow: hidden;}
.goods_list.cols_2 .img_cover image{position: absolute;width: 100%;height: 100%;top: 0;left: 0;}
.goods_list.cols_2 .gs_item_info{padding-bottom: 10px;}
.goods_list .gs_item_info{box-sizing: border-box;padding-right:10px;overflow: hidden;line-height: 1;margin-left: 10px;}
.goods_list .gs_item_title,.goods_list .gs_item_price {margin-top: 6rpx;word-break: break-all;color: #333;line-height: 1.36;}
.goods_list .gs_item_title{overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;height: 72rpx;white-space: normal;color: #000;}
.goods_list .gs_item_price{color: #e93b3d;font-size: 24rpx;}
.goods_list .gs_item_price .price{font-size: 30rpx;font-weight: 400;}
.goods_list.cols_2 .it_date{width: 100%;display: block;padding: 5px 15px;}
/*通用货品列表样式  */
.gs_item_weight, .gs_item_price, .gs_item_promotionInfo{margin-top: 8rpx;-webkit-line-clamp: 1;font-size: 26rpx;}
.weui-media-box__desc{color: #999;line-height: 1.36;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-box-orient: vertical}
.goods_list .promotionInfo{display: inline-block;font-size: 24rpx;color: #FF285A;padding: 2px 12rpx;border: 1px solid #FF285A;border-radius: 0.1875rem;}
.goods_list .gs_item_price1{padding-left: 12rpx;line-height: 40rpx;text-decoration: line-through;color: #999;font-size: 26rpx;}

/* 1 */
.goods_list.cols_1 .gs_item {display: block;position: relative;padding: 4rpx 12rpx;background-color: #fff;}
.goods_list.cols_1 .gs_item .info{position: relative;padding-left: 240rpx;}
.goods_list.cols_1 .img_cover{position: absolute;left: 0;top: 0;width: 120px;height: 120px;overflow: hidden;}
.goods_list.cols_1 .img_cover image{width:100%;height:100%;}
.goods_list.cols_1 .gs_item_info{min-height: 120px;padding-bottom: 8px;border-bottom: 1px solid #e5e5e5}
.msearch_aside{border:1px solid #ddd;border-radius: 50%;padding: 8px; position: fixed;right: 30rpx;z-index: 8;bottom: 100rpx;background-color: #fff;}
.msearch_aside image.mode-tab_image {width: 48rpx;height: 48rpx;background-size: 16px;}

/* 关注工厂 */
.collect{
  margin: 20rpx;
  overflow-x: auto;
  box-shadow: 0px 3px 2px 0px #ddd;
  padding: 10rpx 16rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  overflow-y: hidden;
}
.collect-overflow{overflow-x: scroll;
  width: 100%;
  overflow-y: hidden;
  min-width: max-content;}
.fac-name{    color: #808080;
    font-size: 24rpx;
    overflow-y: hidden;
    overflow-x: scroll;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;}
.collect .collect-fac-item{width: 120rpx;margin-right: 20rpx;display: inline-block;vertical-align:middle;}
.collect .collect-fac-item image{width: 100rpx;height: 100rpx;}