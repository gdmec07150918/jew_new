/* pages/addorderPopup/addorderPopup.wxss */
.weui-popup__modal-head{width: calc(100% - 40rpx);padding: 0 30rpx 0 20rpx;top:-52rpx;padding-bottom: 10rpx;}
.weui-popup__modal-head::after, .weui-popup__modal-content .goods-hands::after{content: " ";position: absolute;left: 0; bottom: 0; right: 0; height: 1px;border-bottom: 1px solid #666;color: #666;-webkit-transform-origin: 0 100%;transform-origin: 0 100%;-webkit-transform: scaleY(.5);transform: scaleY(.5);}
.weui-popup__modal-head .imgbox{ width: 200rpx;height: 200rpx;position: relative;background-color:#fff;border-radius:6rpx;border:1px solid #f0f1f3}
.weui-popup__modal-head .goods-img{max-width: 100%;max-height: 100%;}
.weui-popup__modal-head >.weui-cell__bd{position: relative;top: 52rpx; color: #666;padding-bottom: 20rpx;}
.weui-popup__modal-head .weui-cell__bd{left: 10rpx;}
.weui-popup__modal-head .gs-price{color: #f00;}
.weui-cell.goods-info{padding: 0 20rpx 0 0;}
.weui-cell.goods-info::before{display: none;}
.weui-popup__modal-head .goods-name{overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;}
.weui-popup__modal-head .weui-cell__ft text{padding: 0 10rpx;}
.weui-popup__modal-content{flex: 1;overflow: auto;position: relative;top: 0rpx;left: 0;right: 0;margin-top: -52rpx;padding-bottom: 40rpx;}
.goods-hands .weui-cell,.goods-hands .weui-cell__ft{color: #666;}
.goods-hands .itemnumber{margin-right: 20rpx;}
.goods-hands .gs-count,.gs-count .weui-cell__ft{color: #333;}
.goods-hands .weui-cell{padding: 8rpx 30rpx;}
.goods-hands .weui-cell__hd,.goods-hands .weui-cell__ft{flex: 1;}
.goods-hands .weui-cell__ft{text-align: center;}
.goods-hands .weui-cell__bd{flex: 2;}
.history-order .weui-cell-title,.history-order .weui-cell{padding: 3rpx 20rpx;color: #333;}
.history-order .weui-cell,.history-order .weui-cell__ft{color: #666;}
.weui-popup__modal-content .weui-cell::before{display: none;}
.box-line.weui-cell view{border-top: 1px solid #e5e5e5;}
.weui-cell_access {-webkit-tap-highlight-color: rgba(0,0,0,0);color: inherit;}
.history-order .weui-cell__bd,.goods-hands .weui-cell__bd{text-align: left;}
.weui-cell__bd.number-title{padding-left: 80rpx;}
.add-order{width: 100%;height: 100rpx;line-height: 100rpx;background-color: #ffb03f;color: #fff;font-size: 32rpx;text-align: center;bottom: 0;z-index: 104}
.gs-count .num_count{display: inline-block;border: 1px solid #ccc;height: 48rpx;}
.gs-count .num_count input,.gs-count .num_count view{display: inline-block;}
.gs-count .num_count input{width: 62rpx;height: 48rpx;min-height: 48rpx; line-height: 48rpx; text-align: center;border-left: 1px solid #ccc;border-right: 1px solid #ccc;padding: 0 6rpx;}
.gs-count .num_count view{height: 48rpx;width: 48rpx;vertical-align: top;position: relative;}
.hand_minus:after, .hand_plus:after {position: absolute;left: 50%;top: 50%;transform: translate(-50%,-50%);content: "";display: block;width: .75rem;height: 1px;background: #333;border-radius: 1px;}
.hand_plus:before {position: absolute;left: 50%;top: 50%;content: "";display: block;width: 1px;height: .75rem;transform: translate(-50%,-50%);background: #333;border-radius: 1px;}
.disabled:after{background-color: #ddd;}
.goods-hands .ask{    border: 1px solid #cbcbcb;border-radius: 0.375rem;width: 90%;color: #333;padding: 0.1875rem;padding-left: 0.375rem;margin-left: 20rpx;margin-bottom: 6rpx;}
.htabs .weui-cell__bd{text-align: center;}
